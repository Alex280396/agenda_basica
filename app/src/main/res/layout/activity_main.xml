<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="194dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="117dp"
        android:src="@drawable/perf"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="55dp"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_numero"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="141dp"
        android:hint="Numero"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_below="@+id/edit_numero"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="57dp"
        android:text="Agregar contacto" />

    <Button
        android:id="@+id/btn_display"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_below="@+id/edit_numero"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:layout_marginRight="0dp"
        android:text="Ver contactos" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/edit_numero"
        android:text="Guardar Cambios"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/telefono"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="349dp"
        app:srcCompat="@drawable/ic_baseline_phone_android_24" />

    <ImageView
        android:id="@+id/nombre"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="325dp"
        android:layout_marginTop="265dp"
        app:srcCompat="@drawable/ic_baseline_drive_file_rename_outline_24" />


</RelativeLayout>